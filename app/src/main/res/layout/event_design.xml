<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
android:background="@color/white_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_layout_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.97"
        app:layout_constraintHeight_percent="0.95"
        android:background="@drawable/custom_bg"
        >



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
android:id="@+id/event_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/user"

        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.65"
        app:layout_constraintHorizontal_bias="0.03"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"
        >

    </de.hdodenhof.circleimageview.CircleImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

android:id="@+id/event_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="We all need push in out life. Guru is best for that."
        android:singleLine="true"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintVertical_bias="0.45"



        >

    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/event_subheading"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:gravity="center_vertical"
        android:text="We all need push in out life. Guru is best for that."
        android:maxLines="2"
        android:minLines="1"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintVertical_bias="0.8"



        >

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/event_created_at"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:text="SAT, JUN 15 07:30 PM"
        android:maxLines="1"
        android:minLines="1"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintVertical_bias="0.2"



        >

    </androidx.appcompat.widget.AppCompatTextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>